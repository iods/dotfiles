[extdiff]
cmd.vimdiff = vim
opts.vimdiff = -f '+next' '+execute "DirDiff" argv(0) argv(1)'

cmd.gvimdiff = gvim
opts.gvimdiff = -f '+next' '+execute "DirDiff" argv(0) argv(1)'

[color]
status.modified = blue
status.added = green
status.removed = red
status.deleted = cyan bold
status.unknown = yellow bold
status.ignored = black bold
status.clean = none
status.copied = none

diff.diffline = bold
diff.extended = cyan bold
diff.file_a = red bold
diff.file_b = green bold
diff.hunk = magenta
diff.deleted = red
diff.inserted = green
diff.changed = white
diff.trailingwhitespace = bold red_background

[changelog]
filename = CHANGES

[trusted]
users = root
